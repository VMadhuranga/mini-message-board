<!doctype html>
<html>
  <head>
    <title>Document</title>
  </head>
  <body>
    <h1>Add new message</h1>
    <form action="/new" method="post">
      <p>
        <label for="name"
          >Name: <input id="name" name="name" type="text" maxlength="100"
        /></label>
      </p>
      <p>
        <label for="message">
          Message:
          <textarea
            name="message"
            id="message"
            cols="20"
            rows="5"
            maxlength="100"
          ></textarea>
        </label>
      </p>
      <button type="submit">Submit</button>
    </form>
  </body>
</html>
